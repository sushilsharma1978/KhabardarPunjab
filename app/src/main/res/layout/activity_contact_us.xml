<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/backimage_light"
    tools:context=".ContactUs">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:src="@drawable/kahabrdar_logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:text="Realization of Sikhs Right to Self Determination and holding of Independence Referendum in the state Punjab.
\n\nAddress 7520 Astoria Blvd, Suite 170
east Elmhurst NY 11370"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:textStyle="normal"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="4dp"
            android:justificationMode="inter_word"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:textStyle="normal"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="4dp"
            android:justificationMode="inter_word"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
</LinearLayout>